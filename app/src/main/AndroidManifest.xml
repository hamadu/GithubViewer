<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.hama_du.githubviewer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DisplayMessageActivity" />
        <activity
            android:name=".ApplicationListActivity"
            android:label="@string/title_activity_application_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RepositoryListActivity"
            android:label="@string/title_activity_repository_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>